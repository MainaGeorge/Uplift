@model Uplift.Models.ViewModels.HomeViewModel

@foreach (var category in Model.CategoryList.OrderBy(c => c.DisplayOrder))
{
    if (Model.ServiceList.Any(c => c.CategoryId == category.Id))
    {
        <div class="row container pb-3 backgroundWhite">
            <div class="col-12">
                <div class="row">
                    <h2 class="text-success"><strong>@category.Name</strong></h2>

                    <div class="col-12">
                        <div class="row my-3">
                            @foreach (var service in Model.ServiceList.Where(c => c.CategoryId == category.Id))
                            {
                                <div class="col-lg-4 col-xl-3 col-md-6 pb-4">
                                    <div class="card" style="border: 2px solid #43ac6a; border-radius: 5px; background: url('/images/leaves.png')">
                                        <div class="pl-3 pt-1 text-center">
                                            <h3 class="card-title text-primary"><strong>@service.Name</strong></h3>
                                        </div>

                                        <div class="d-flex justify-content-between">
                                            <div class="pl-1 text-muted">Price Per Service</div>
                                            <div class="pr-1 text-danger h5">$@service.Price</div>
                                        </div>

                                        <img src="@service.ImageUrl" alt="service image" class="card-img-top p-2 rounded" />
                                        <div class="text-muted text-center pb-2">@service.Frequency.Name</div>

                                        <a asp-action="Details" style="border-radius: 2px" class="btn btn-success" asp-route-id="@service.Id">Details</a>
                                    </div>
                                </div>

                            }

                        </div>
                    </div>
                </div>


            </div>

        </div>
    }
}